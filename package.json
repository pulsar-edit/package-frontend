{
  "name": "package-web",
  "version": "1.1.0",
  "description": "Package Frontend for the Pulsar Package Backend.",
  "main": "./src/server.js",
  "scripts": {
    "postinstall": "npm run build:site",
    "start": "npm run node:prod",
    "start:dev": "cross-env PULSAR_STATUS=dev nodemon ./src/server.js",
    "node:prod": "node ./src/server.js",
    "test": "jest ./src/tests/",
    "build:site": "node ./scripts/build-site.js",
    "deploy_script": "echo 'Do not run!' && gcloud app deploy"
  },
  "engines": {
    "node": ">=16 <=18"
  },
  "nodemonConfig": {
    "ext": "*.js, *.ejs, *.less",
    "events": {
      "restart": "npm run build:site"
    },
    "ignore": "./site/resources-generated-serve/"
  },
  "author": "confused-Techie",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/storage": "^6.7.0",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "js-yaml": "^4.1.0",
    "less": "^4.4.2",
    "markdown-it": "^13.0.1",
    "markdown-it-emoji": "^2.0.2",
    "markdown-it-github-headings": "^2.0.1",
    "markdown-it-highlightjs": "^4.0.1",
    "markdown-it-task-checkbox": "^1.0.6",
    "minify": "^9.2.0",
    "parse-github-url": "^1.0.2",
    "superagent": "^8.0.1"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "jest": "^29.2.2",
    "nodemon": "^2.0.20"
  }
}
